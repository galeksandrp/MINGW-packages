_realname=gperftools
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=2.5
pkgrel=1
pkgdesc='The fastest malloc weâ€™ve seen (mingw-w64)'
arch=('any')
license=('BSD')
url="https://github.com/gperftools/${_realname}"
source=("${url}/archive/${_realname}-${pkgver}.tar.gz")
sha256sums=('SKIP')

prepare() {
  cd ${srcdir}/${_realname}-${_realname}-${pkgver}

  ./autogen.sh
}

build() {
  cd ${srcdir}/${_realname}-${_realname}-${pkgver}

  ./configure
  make
}

package() {
  cd ${srcdir}/${_realname}-${_realname}-${pkgver}

  #sed 's&$(INSTALL_BIN) -s $(INSTALL_OBJS) $(BINDIR)&$(INSTALL_BIN) -s bin/* $(BINDIR)&' -i Makefile.Linux
  #make DESTDIR=${pkgdir} prefix=${MINGW_PREFIX} install -f Makefile.Linux
}
