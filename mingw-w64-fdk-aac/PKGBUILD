_realname=fdk-aac-git
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=5fd7e6537d1f37fb1bec8c6aa2f8e22030ab10de
pkgrel=1
pkgdesc='A standalone library of the Fraunhofer FDK AAC code from Android'
arch=('any')
license=('custom')
makedepends=('autoconf' 'automake' 'libtool' 'make')
url="https://github.com/mstorsjo/${_realname}"
source=("https://github.com/mstorsjo/${_realname}/archive/${pkgver}.tar.gz")
sha256sums=('SKIP')

prepare() {
	cd ${srcdir}/${_realname}-${pkgver}

	./autogen.sh
	./configure --prefix=${MINGW_PREFIX}
}

build() {
	cd ${srcdir}/${_realname}-${pkgver}

	make
}

package() {
	cd ${srcdir}/${_realname}-${pkgver}

	make DESTDIR=${pkgdir} install
}
